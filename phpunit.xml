<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
	<testsuites>
		<testsuite name="BASIC">
			<directory>tests/Basic/</directory>
		</testsuite>
		<testsuite name="REST">
<!-- 			<directory>tests/REST/</directory> -->
			<file>tests/REST/AbstractTest.php</file>
			<file>tests/REST/ActivityTest.php</file>
			<file>tests/REST/ActivityLogTest.php</file>
		</testsuite>
	</testsuites>

	<!-- Code coverage -->
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">src</directory>
		</whitelist>
	</filter>
	<logging>
        <log 
        	type="coverage-clover" 
        	target="build/logs/clover.xml"/>
	</logging>
</phpunit>