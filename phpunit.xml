<?xml version="1.0" encoding="UTF-8"?>
<phpunit 
	bootstrap="./vendor/autoload.php"
	stopOnWarning="false"
	verbose="false"
	backupGlobals="false"
	backupStaticAttributes="false"
	colors="true">
	<testsuites>
		<testsuite name="BASIC">
			<directory>tests/Basic/</directory>
		</testsuite>
		<testsuite name="REST">
			<directory>tests/REST/</directory>
			<directory>tests/RestActivityOutput/</directory>
			<directory>tests/RestActivityStep/</directory>
			<directory>tests/RestTest/</directory>
			<directory>tests/RestRequirement/</directory>
			<directory>tests/RestTestRisk/</directory>
			<directory>tests/RestTestVariable/</directory>
			<directory>tests/RestScenario/</directory>
		</testsuite>
	</testsuites>

	<!-- Code coverage -->
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">./src</directory>
			<directory suffix=".php">./src6</directory>
		</whitelist>
	</filter>
	<logging>
		<log 
			type="coverage-html" 
			target="build/tmp/report" 
			lowUpperBound="35" 
			highLowerBound="70"/>
		<log 
			type="coverage-clover" 
			target="build/tmp/coverage.xml"/>
		<log 
			type="junit" 
			target="build/tmp/logfile.xml"/>
	</logging>
</phpunit>